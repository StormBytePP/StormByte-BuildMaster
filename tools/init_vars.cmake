if(NOT BUILDMASTER_CONFIGURED)
	set(BUILDMASTER_TOOLS_SRCDIR "${CMAKE_CURRENT_LIST_DIR}")
	set(BUILDMASTER_TOOLS_BINDIR "${CMAKE_CURRENT_BINARY_DIR}")
	if(NOT DEFINED BUILDMASTER_INSTALL_DIR)
		set(BUILDMASTER_INSTALL_DIR "${CMAKE_CURRENT_BINARY_DIR}/install")
		file(MAKE_DIRECTORY "${BUILDMASTER_INSTALL_DIR}")
	endif()
	set(BUILDMASTER_INSTALL_LIBDIR "${BUILDMASTER_INSTALL_DIR}/${CMAKE_INSTALL_LIBDIR}")
	set(BUILDMASTER_INSTALL_BINDIR "${BUILDMASTER_INSTALL_DIR}/${CMAKE_INSTALL_BINDIR}")
	file(MAKE_DIRECTORY "${BUILDMASTER_INSTALL_LIBDIR}")
	file(MAKE_DIRECTORY "${BUILDMASTER_INSTALL_BINDIR}")
	if (NOT CMAKE_BUILD_TYPE)
		set(CMAKE_BUILD_TYPE "Release" CACHE STRING "Build type" FORCE)
	endif()
	string(TOLOWER ${CMAKE_BUILD_TYPE} MESON_BUILD_TYPE)

	# Update out part of the toolchain file
	include("${CMAKE_CURRENT_LIST_DIR}/update_toolchain.cmake")
